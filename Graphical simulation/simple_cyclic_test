import numpy as np

def vertical_symmetry(period, sorted_elements):
    lines = []
    connects = 0
    for i in range(len(period)-1):
        if sorted_elements.index(period[i])!=(len(sorted_elements)-1):
            if period[i+1]==sorted_elements[sorted_elements.index(period[i])+1] or period[i+1]==sorted_elements[sorted_elements.index(period[i])-1]:
                connects += 1
        else:
            pass
    print(connects)
    
period = [0, 1, 1, 2, 3, 5, 8, 3, 1, 4, 5, 9, 4, 3, 7, 0, 7, 7, 4, 1, 5, 6, 1, 7, 8, 5, 3, 8, 1, 9, 0, 9, 9, 8, 7, 5, 2, 7, 9, 6, 5, 1, 6, 7, 3, 0, 3, 3, 6, 9, 5, 4, 9, 3, 2, 5, 7, 2, 9, 1]
sorted_elements = np.unique(sorted(np.unique(period))).tolist()

vertical_symmetry(period, sorted_elements)